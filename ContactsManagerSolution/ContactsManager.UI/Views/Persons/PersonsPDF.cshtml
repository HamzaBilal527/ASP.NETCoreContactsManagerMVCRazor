@using Microsoft.AspNetCore.Mvc.Razor
@model IEnumerable<PersonResponse>

@{
    Layout = null;
}


   
    <link href="@("http://" + Context.Request.Host.ToString() + "/Stylesheet.css")" rel="stylesheet" />
    <h1>Persons</h1>
    <table class="table w-100 mt">
        <thead>
            <tr>
                <th>Person Name</th>
                <th>Email</th>
                <th>Date of Birth</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Country</th>
                <th>Address</th>
                <th>Recieve News Letter</th>
                <th>Person Name</th>



            </tr>
        </thead>
        <tbody>
            @foreach (PersonResponse person in Model)
            {
                <tr>
                    <td style="width:15%">@person.PersonName</td>
                    <td style="width:20%">@person.Email</td>
                    <td style="width:13%">@person.DateOfBirth?.ToString("dd MMM yyyy")</td>
                    <td style="width:9%">@person.Age</td>
                    <td style="width:10%">@person.Gender</td>
                    <td style="width:10%">@person.Country</td>
                    <td style="width:20%">@person.Address</td>
                    <td style="width:12%">@person.RecieveNewsLetter</td>
                    
                </tr>
            }
        </tbody>
    </table>

